<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="testBean"
          class="com.goltsov.spring.TestBean">
        <constructor-arg value="Dmitrij"/>
    </bean>

    <bean id="RockMusicBean"
          class="com.goltsov.spring.kindsofmusic.RockMusic">
    </bean>

    <bean id="ClassicalMusicBean"
          class="com.goltsov.spring.kindsofmusic.ClassicalMusic">
    </bean>

    <bean id="PopMusicBean"
          class="com.goltsov.spring.kindsofmusic.PopMusic">
    </bean>

